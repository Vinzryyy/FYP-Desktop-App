<Window x:Class="FYP.UpdateProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Input Profile" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Profile Name -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Profile Name:" 
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Width="100"/>
            <TextBox x:Name="txtProfileName" Width="300" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Key Mapping Section -->
        <GroupBox Header="Key Mappings" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- DataGrid for mappings -->
                <DataGrid x:Name="txtMappings" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="True"
                          Margin="0,0,0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="*"/>
                        <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Buttons for mapping -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1">
                    <Button Content="Add Mapping" Width="100" Margin="5" Click="AddMapping_Click"/>
                    <Button Content="Remove Selected" Width="120" Margin="5" Click="RemoveMapping_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Save/Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Save" Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
